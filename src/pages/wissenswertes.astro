---
/**
 * Wissenswertes (Knowledge/Blog) Page
 * @author andreas@siglochconsulting.de
 *
 * Blog articles, publications, and insights
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// In future, this will dynamically load blog posts from Markdown files
const articles = [
  {
    title: 'Systems Engineering and AI',
    excerpt: 'In den letzten 6 Monaten habe ich mich intensiv mit der operativen Anwendung von GenAI im Systems Engineering Kontext beschäftigt.',
    date: '2025-05-07',
    slug: 'systems-engineering-and-ai',
    tags: ['GenAI', 'Systems Engineering', 'AI']
  },
  {
    title: 'Lean SE - Leichtgewichtige Ansätze',
    excerpt: 'Systems Engineering kann sehr schwergewichtig sein. Nicht jedes Projekt braucht das "große Besteck". Hier sind Ideen für leichtgewichtige Ansätze.',
    date: '2024-12-15',
    slug: 'lean-se',
    tags: ['Lean SE', 'Systems Engineering', 'Efficiency']
  },
  {
    title: 'Systems Engineering Efficiency Potentials',
    excerpt: 'Identifikation und Nutzung von Effizienzpotenzialen in Systems Engineering Prozessen.',
    date: '2024-11-20',
    slug: 'se-efficiency-potentials',
    tags: ['Efficiency', 'Systems Engineering', 'Process Optimization']
  }
];
---

<BaseLayout
  title="Wissenswertes - Sigloch Consulting Blog"
  description="Veröffentlichungen, Artikel und Insights zu Systems Engineering, GenAI, Lean SE und Produktentwicklung"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="blog-hero">
      <div class="container">
        <h1>Wissenswertes</h1>
        <p class="hero-subtitle">
          Veröffentlichungen, Artikel und Insights zu Systems Engineering,
          GenAI und moderner Produktentwicklung
        </p>
      </div>
    </section>

    <!-- Featured Article -->
    <section class="featured-article">
      <div class="container">
        <div class="featured-card">
          <span class="featured-badge">Aktuell</span>
          <h2>ReConf Munich 2025 - GenAI for Systems Engineering</h2>
          <p class="meta">Präsentation am 7. Mai 2025</p>
          <p>
            In den letzten 6 Monaten habe ich mich intensiv mit der operativen
            Anwendung von GenAI im Systems Engineering Kontext beschäftigt.
            Die Erkenntnisse aus meiner <strong>#Summerschool</strong> Serie auf
            LinkedIn werden auf der Requirements Engineering Conference in München
            präsentiert.
          </p>
          <p>
            <strong>Kernthese:</strong> Large Language Models können Systems
            Engineering Themen signifikant bearbeiten. Die Entwicklung von
            Programmer-Assistenten zeigt die aktuellen Möglichkeiten und das
            rasante Entwicklungstempo.
          </p>
          <div class="article-actions">
            <a href="https://www.re-conf.de/" target="_blank" rel="noopener" class="button button-primary">
              Zur ReConf →
            </a>
            <a href="https://www.linkedin.com/in/andreas-sigloch" target="_blank" rel="noopener" class="button button-secondary">
              LinkedIn Artikel
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Articles Grid -->
    <section class="articles-section">
      <div class="container">
        <h2>Veröffentlichungen</h2>

        <div class="articles-grid">
          {articles.map((article) => (
            <article class="article-card">
              <div class="article-meta">
                <time datetime={article.date}>
                  {new Date(article.date).toLocaleDateString('de-DE', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
              <h3>{article.title}</h3>
              <p>{article.excerpt}</p>
              <div class="article-tags">
                {article.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <a href={`/blog/${article.slug}`} class="article-link">
                Weiterlesen →
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- LinkedIn Integration Section -->
    <section class="linkedin-section">
      <div class="container">
        <div class="linkedin-cta">
          <div class="linkedin-content">
            <h2>Mehr auf LinkedIn</h2>
            <p>
              Folgen Sie mir auf LinkedIn für regelmäßige Insights zu
              Systems Engineering, GenAI-Integration und Produktentwicklung.
            </p>
            <p>
              Die <strong>#Summerschool</strong> Serie bietet praktische
              Anleitungen zur Integration von GenAI in Entwicklungsprozesse.
            </p>
            <a
              href="https://www.linkedin.com/in/andreas-sigloch"
              target="_blank"
              rel="noopener"
              class="button button-primary button-large"
            >
              <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24" style="margin-right: var(--space-2);">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              Auf LinkedIn folgen
            </a>
          </div>
          <div class="linkedin-visual">
            <div class="visual-placeholder">
              <p>LinkedIn Icon/Visual</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="newsletter-section">
      <div class="container">
        <div class="newsletter-box">
          <h2>Bleiben Sie informiert</h2>
          <p>
            Neue Artikel, Veröffentlichungen und Veranstaltungen -
            kontaktieren Sie mich für Updates.
          </p>
          <a href="/#kontakt" class="button button-primary button-large">
            Kontakt aufnehmen
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero */
  .blog-hero {
    padding: var(--space-20) 0 var(--space-12) 0;
    background: linear-gradient(
      135deg,
      var(--color-primary-50) 0%,
      var(--color-background) 100%
    );
    text-align: center;
  }

  .blog-hero h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-4);
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Featured Article */
  .featured-article {
    padding: var(--space-16) 0;
  }

  .featured-card {
    background: var(--color-primary-50);
    padding: var(--space-12);
    border-radius: var(--radius-xl);
    border: 3px solid var(--color-primary);
    position: relative;
  }

  .featured-badge {
    display: inline-block;
    background: var(--color-primary);
    color: var(--color-background);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-pill);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-4);
  }

  .featured-card h2 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-3);
  }

  .featured-card .meta {
    color: var(--color-text-secondary);
    font-weight: var(--font-medium);
    margin-bottom: var(--space-6);
  }

  .featured-card p {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }

  .article-actions {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-8);
    flex-wrap: wrap;
  }

  /* Articles Grid */
  .articles-section {
    padding: var(--space-16) 0;
    background: var(--color-background-alt);
  }

  .articles-section h2 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-8);
    text-align: center;
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-8);
  }

  .article-card {
    background: var(--color-background);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .article-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-4px);
  }

  .article-meta {
    color: var(--color-text-light);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
  }

  .article-card h3 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-3);
    color: var(--color-primary);
  }

  .article-card p {
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
    flex-grow: 1;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .tag {
    background: var(--color-primary-100);
    color: var(--color-primary-700);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-pill);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
  }

  .article-link {
    color: var(--color-primary);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .article-link:hover {
    color: var(--color-primary-700);
  }

  /* LinkedIn Section */
  .linkedin-section {
    padding: var(--space-16) 0;
  }

  .linkedin-cta {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .linkedin-content h2 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-6);
  }

  .linkedin-content p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    line-height: var(--leading-relaxed);
  }

  .linkedin-content strong {
    color: var(--color-text);
  }

  .linkedin-content .button {
    margin-top: var(--space-6);
    display: inline-flex;
    align-items: center;
  }

  .visual-placeholder {
    width: 100%;
    aspect-ratio: 1;
    background: var(--color-gray-200);
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-light);
    font-style: italic;
  }

  /* Newsletter */
  .newsletter-section {
    padding: var(--space-16) 0;
    background: var(--color-primary-50);
  }

  .newsletter-box {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: var(--space-12);
    background: var(--color-background);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
  }

  .newsletter-box h2 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .newsletter-box p {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .articles-grid {
      grid-template-columns: 1fr;
    }

    .linkedin-cta {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .blog-hero h1 {
      font-size: var(--text-4xl);
    }

    .featured-card h2 {
      font-size: var(--text-3xl);
    }

    .article-actions {
      flex-direction: column;
    }

    .article-actions .button {
      width: 100%;
    }
  }
</style>
